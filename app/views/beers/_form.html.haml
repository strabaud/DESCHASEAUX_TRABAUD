= form_for(@beer) do |f|
  - if @beer.errors.any?
    #error_explanation
      %h2
        = pluralize(@beer.errors.count, "error")
        prohibited this beer from being saved:
      %ul
        - @beer.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :beer
    %br
      = f.text_field :beer
  .field
    = f.label :description
    %br
      = f.text_area :description
  .field
    = f.label :note
    %br
      = f.number_field :note
  .actions
    = f.submit
